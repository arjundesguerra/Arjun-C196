<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".termsActivities.AddTerms">

    <TextView
        android:id="@+id/addInstructorText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="81dp"
        android:gravity="center"
        android:text="Add an Instructor"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <EditText
        android:id="@+id/editInstructorName"
        android:layout_width="243dp"
        android:layout_height="58dp"
        android:layout_marginStart="271dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="271dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textPersonName"
        android:text="Enter instructor name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addInstructorText" />

    <EditText
        android:id="@+id/editInstructorEmail"
        android:layout_width="243dp"
        android:layout_height="58dp"
        android:layout_marginStart="271dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="271dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="textEmailAddress"
        android:text="Enter instructor email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editInstructorName" />

    <EditText
        android:id="@+id/editInstructorNumber"
        android:layout_width="243dp"
        android:layout_height="58dp"
        android:layout_marginStart="271dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="271dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="number"
        android:text="Enter instructor phone number"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editInstructorEmail" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="346dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="347dp"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editInstructorNumber" />


</androidx.constraintlayout.widget.ConstraintLayout>